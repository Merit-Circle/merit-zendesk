<div id="main-content">

  <div class="lt-container">
    <div class="lt-container-inner">
      <ol class="breadcrumbs lt-mb-9 lt-pb-2">
        <li data-breadcrumb-home>
          <a href="https://meritcircle.io/" target="_blank">Home</a>
        </li>
        <li>
          Support
        </li>
      </ol>
    </div>
  </div>

  {{#if settings.toggle_category_list}}
    <div class="lt-container lt-mb-9 lt-pb-3 lt-block-list-container lt-home-container" id="block-list">
      <div class="lt-container-inner">
        <h1 class="h2 lt-mb-3 category-list__title">
          {{#if settings.toggle_translations}}
            {{dc settings.category_list_title}}
          {{else}}
            {{settings.category_list_title}}
          {{/if}}
        </h1>
        <p class="category-list__subtitle">
          {{#if settings.toggle_translations}}
            {{dc settings.category_list_subtitle}}
          {{else}}
            {{settings.category_list_subtitle}}
          {{/if}}
        </p>
        <ul class="lt-category-list lt-list-unstyled lt-mb-0">
          {{#each categories}}
            <li class="lt-category-list-item is-hidden" data-category-item-id="{{id}}">
              <a class="lt-category-list-item__link" href="{{url}}">
                {{name}}
              </a>
            </li>
          {{/each}}
        </ul>
      </div>
    </div>
  {{/if}}

  {{#if settings.toggle_top_articles}}
    <div class="lt-container lt-mb-9 lt-pb-4 lt-home-container" id="top-articles">
      <div class="lt-container-inner">
        <h2 class="lt-mb-5">
          {{#if settings.toggle_translations}}
            {{dc settings.top_articles_title}}
          {{else}}
            {{settings.top_articles_title}}
          {{/if}}
        </h2>
        <div class=""
            x-data="Theme.topArticles()" 
            x-init="fetchArticles()"
            x-cloak
          >
          <ul class="lt-list-unstyled lt-row lt-row-cols-lg-3 lt-gy-5">
            <template x-for="(article, index) in articles" :key="index">
              <li class="lt-promoted-articles-item">
                <a class="lt-promoted-articles-item-inner" :href="article.html_url">
                  <span class="lt-promoted-articles-item__title lt-strong lt-d-flex lt-mb-1 lt-w-100" x-text="article.title"></span>
                  <span class="lt-meta lt-mb-0" x-text="article.excerpt"></span>
                </a>
              </li>
            </template>
          </ul>
        </div>
      </div>
    </div>
  {{/if}}

  {{#if settings.toggle_fees_articles}}
    <div class="lt-container lt-mb-9 lt-pb-4 lt-home-container" id="fees-articles">
      <div class="lt-container-inner">
        <h2 class="lt-mb-5">
          {{#if settings.toggle_translations}}
            {{dc settings.fees_articles_title}}
          {{else}}
            {{settings.fees_articles_title}}
          {{/if}}
        </h2>
        <div class=""
            x-data="Theme.feesArticles()" 
            x-init="fetchArticles()"
            x-cloak
          >
          <ul class="lt-list-unstyled" data-carousel-articles>
            <template x-for="(article, index) in articles" :key="index">
              <li class="lt-promoted-articles-item">
                <a class="lt-promoted-articles-item-inner" :href="article.html_url">
                  <span class="lt-promoted-articles-item__title lt-strong lt-d-flex lt-mb-1 lt-w-100" x-text="article.title"></span>
                  <span class="lt-meta lt-mb-0" x-text="article.excerpt"></span>
                </a>
              </li>
            </template>
          </ul>
        </div>
      </div>
    </div>
  {{/if}}

  {{#if settings.toggle_custom_blocks}}
    <div class="lt-container lt-custom-blocks lt-mb-9 lt-pb-7" id="custom-blocks"  x-data='Theme.customBlocks()' x-cloak>
      <div class="lt-container-inner">
        <div class="lt-custom-blocks__items">
          <div class="lt-row lt-row-cols-lg-2 lt-justify-content-center lt-custom-blocks__items lt-gy-5">
            <template x-for="(item, index) in customBlocks" :key="index">
              <div class="lt-custom-block lt-d-flex">
                <a class="lt-custom-block__link lt-d-flex lt-flex-sm-column lt-p-5"
                  x-bind:href="item.url">
                  <img class="lt-custom-block__icon lt-flex-shrink-0 lt-mb-4"
                    x-bind:src="item.imageUrl" />
                  <div class="lt-custom-block__content lt-ms-3 lt-ms-sm-0 lt-mt-sm-3">
                    <div class="h3 lt-custom-block__title lt-mb-2" x-text="item.title"></div>
                    <div class="lt-custom-block__text" x-text="item.text"></div>
                  </div>
                </a>
              </div>
            </template>
          </div>
        </div>
      </div>
    </div>
  {{/if}}

  {{#if settings.toggle_security_articles}}
    <div class="lt-container lt-mb-9 lt-pb-4 lt-home-container" id="security-articles">
      <div class="lt-container-inner">
        <h2 class="lt-mb-5">
          {{#if settings.toggle_translations}}
            {{dc settings.security_articles_title}}
          {{else}}
            {{settings.security_articles_title}}
          {{/if}}
        </h2>
        <div class=""
            x-data="Theme.securityArticles()" 
            x-init="fetchArticles()"
            x-cloak
          >
          <ul class="lt-list-unstyled lt-row lt-row-cols-lg-3 lt-gy-5">
            <template x-for="(article, index) in articles" :key="index">
              <li class="lt-promoted-articles-item">
                <a class="lt-promoted-articles-item-inner" :href="article.html_url">
                  <span class="lt-promoted-articles-item__title lt-strong lt-d-flex lt-mb-1 lt-w-100" x-text="article.title"></span>
                  <span class="lt-meta lt-mb-0" x-text="article.excerpt"></span>
                </a>
              </li>
            </template>
          </ul>
        </div>
      </div>
    </div>
  {{/if}}

  {{#if settings.toggle_boost_cta}}
    <div class="lt-container lt-mb-9 lt-pb-4 lt-home-container" id="boost-cta">
      <div class="lt-container-inner">
        <h2 class="lt-mb-5">
          <a class="boost-cta__title" href="{{#if settings.toggle_translations}}{{dc settings.boost_cta_url}}{{else}}{{settings.boost_cta_url}}{{/if}}">
            {{#if settings.toggle_translations}}
              {{dc settings.boost_cta_title}}
            {{else}}
              {{settings.boost_cta_title}}
            {{/if}}
          </a>
        </h2>
        {{#if settings.boost_cta_image_toggle}}
          <a href="{{#if settings.toggle_translations}}{{dc settings.boost_cta_url}}{{else}}{{settings.boost_cta_url}}{{/if}}">
            <img class="boost-cta__image" src="{{settings.boost_cta_image}}" />
          </a>
        {{/if}}       
      </div>
    </div>
  {{/if}}

  {{#if settings.toggle_promoted_articles}}
    <div class="lt-container lt-mb-9 lt-pb-4 lt-home-container" id="promoted-articles">
      <div class="lt-container-inner">
        <h2 class="lt-mb-5">{{t 'promoted_articles'}}</h2>

        {{#is settings.promoted_articles_type 'list'}}
          <section class="lt-promoted-articles" id="promoted-articles-list">
            {{#if promoted_articles}}
              <ul class="lt-list-unstyled lt-row lt-row-cols-lg-{{settings.promoted_articles_per_line}} lt-gy-5">
                {{#each promoted_articles}}
                  <li class="lt-promoted-articles-item">
                    <a class="lt-promoted-articles-item__title lt-strong lt-d-flex lt-mb-1 lt-w-100" href="{{url}}">{{title}}</a>
                    <div class="lt-meta lt-mb-0">{{excerpt body characters=100}}</div>
                  </li>
                {{/each}}
              </ul>
            {{else}}
              <p>{{t 'empty'}}</p>
            {{/if}}
          </section>
        {{/is}}

        {{#is settings.promoted_articles_type 'accordion'}}
          <section id="promoted-articles-accordion" id="promoted-articles-accordion">
            <div class="lt-promoted-articles-accordion" >
              <ul class="lt-list-unstyled lt-mt-0 lt-mb-0">
                {{#each promoted_articles}}
                  <li
                    class="lt-promoted-articles-accordion-item"
                    data-promoted-articles-accordion>
                    <button
                      class="lt-promoted-articles-accordion-item__title lt-d-block lt-w-100 lt-py-4 lt-px-4 lt-d-block lt-fs-4"
                      aria-expanded="false"
                      aria-controls="promoted-article-accordion-content-{{id}}"
                      data-promoted-articles-accordion-toggle>{{title}}</button>
                    <div
                      class="lt-promoted-articles-accordion-item__content lt-py-4 lt-px-4"
                      id="promoted-article-accordion-content"
                      data-promoted-articles-accordion-content>
                      {{body}}
                    </div>
                  </li>
                {{/each}}
              </ul>
            </div>
          </section>
        {{/is}}

      </div>
    </div>
  {{/if}}

  {{#if settings.toggle_recent_activities}}
    <div class="lt-container lt-home-container" id="recent-activity">
      <div class="lt-container-inner">
        {{#if help_center.community_enabled}}
          {{recent_activity scope='community'}}
        {{/if}}
      </div>
    </div>
  {{/if}}

  {{#if settings.toggle_contact_boxes}}
    <div class="lt-container lt-home-container lt-mb-9" id="contact-boxes">
      <div class="lt-container-inner">
        <h2>
          {{#if settings.toggle_translations}}
            {{dc settings.contact_boxes_title}}
          {{else}}
            {{settings.contact_boxes_title}}
          {{/if}}
        </h2>

        <div class="lt-row lt-row-cols-lg-{{settings.contact_boxes_per_line}} lt-gy-5">
          {{#if settings.contact_box_1_toggle}}
            <div class="lt-flex">
              <{{#if settings.contact_box_1_link_toggle}}a{{else}}div{{/if}} class="lt-contact-box lt-d-flex lt-flex-sm-column lt-h-100"
                href="{{#if settings.toggle_translations}}
                          {{dc settings.contact_box_1_url}}
                        {{else}}
                          {{settings.contact_box_1_url}}
                        {{/if}}">
                <img class="lt-contact-box__icon" data-svg
                    src="{{settings.contact_box_1_icon}}" alt="">
                <div class="lt-contact-box__content lt-mt-3">
                  <div class="h5 lt-contact-box__title lt-mb-1">
                    {{#if settings.toggle_translations}}
                      {{dc settings.contact_box_1_title}}
                    {{else}}
                      {{settings.contact_box_1_title}}
                    {{/if}}
                  </div>
                  <div class="lt-contact-box__text">
                    {{#if settings.toggle_translations}}
                      {{dc settings.contact_box_1_text}}
                    {{else}}
                      {{settings.contact_box_1_text}}
                    {{/if}}
                  </div>
                </div>
              </{{#if settings.contact_box_1_link_toggle}}a{{else}}div{{/if}}>
            </div>
          {{/if}}

          {{#if settings.contact_box_2_toggle}}
            <div class="lt-flex ">
              <{{#if settings.contact_box_2_link_toggle}}a{{else}}div{{/if}} class="lt-contact-box lt-d-flex lt-flex-sm-column lt-h-100" href="{{#if settings.toggle_translations}}
                                  {{dc settings.contact_box_2_url}}
                                {{else}}
                                  {{settings.contact_box_2_url}}
                                {{/if}}">
                <img class="lt-contact-box__icon" data-svg
                    src="{{settings.contact_box_2_icon}}" alt="">
                <div class="lt-contact-box__content lt-mt-3">
                  <div class="h5 lt-contact-box__title lt-mb-1">
                    {{#if settings.toggle_translations}}
                      {{dc settings.contact_box_2_title}}
                    {{else}}
                      {{settings.contact_box_2_title}}
                    {{/if}}
                  </div>
                  <div class="lt-contact-box__text">
                    {{#if settings.toggle_translations}}
                      {{dc settings.contact_box_2_text}}
                    {{else}}
                      {{settings.contact_box_2_text}}
                    {{/if}}
                  </div>
                </div>
              </{{#if settings.contact_box_2_link_toggle}}a{{else}}div{{/if}}>
            </div>
          {{/if}}

          {{#if settings.contact_box_3_toggle}}
            <div class="lt-flex ">
              <{{#if settings.contact_box_3_link_toggle}}a{{else}}div{{/if}} class="lt-contact-box lt-d-flex lt-flex-sm-column lt-h-100" href="{{#if settings.toggle_translations}}
                                          {{dc settings.contact_box_3_url}}
                                        {{else}}
                                          {{settings.contact_box_3_url}}
                                        {{/if}}">
                <img class="lt-contact-box__icon" data-svg
                    src="{{settings.contact_box_3_icon}}" alt="">
                <div class="lt-contact-box__content lt-mt-3">
                  <div class="h5 lt-contact-box__title lt-mb-1">
                    {{#if settings.toggle_translations}}
                      {{dc settings.contact_box_3_title}}
                    {{else}}
                      {{settings.contact_box_3_title}}
                    {{/if}}
                  </div>
                  <div class="lt-contact-box__text">
                    {{#if settings.toggle_translations}}
                      {{dc settings.contact_box_3_text}}
                    {{else}}
                      {{settings.contact_box_3_text}}
                    {{/if}}
                  </div>
                </div>
              </{{#if settings.contact_box_3_link_toggle}}a{{else}}div{{/if}}>
            </div>
          {{/if}}

          {{#if settings.contact_box_4_toggle}}
            <div class="lt-flex ">
              <{{#if settings.contact_box_4_link_toggle}}a{{else}}div{{/if}} class="lt-contact-box lt-d-flex lt-flex-sm-column lt-h-100" href="{{#if settings.toggle_translations}}
                                          {{dc settings.contact_box_4_url}}
                                        {{else}}
                                          {{settings.contact_box_4_url}}
                                        {{/if}}">
                <img class="lt-contact-box__icon" data-svg
                    src="{{settings.contact_box_4_icon}}" alt="">
                <div class="lt-contact-box__content lt-mt-3">
                  <div class="h5 lt-contact-box__title lt-mb-1">
                    {{#if settings.toggle_translations}}
                      {{dc settings.contact_box_4_title}}
                    {{else}}
                      {{settings.contact_box_4_title}}
                    {{/if}}
                  </div>
                  <div class="lt-contact-box__text">
                    {{#if settings.toggle_translations}}
                      {{dc settings.contact_box_4_text}}
                    {{else}}
                      {{settings.contact_box_4_text}}
                    {{/if}}
                  </div>
                </div>
              </{{#if settings.contact_box_4_link_toggle}}a{{else}}div{{/if}}>
            </div>
          {{/if}}

        </div>
      </div>
    </div>
  {{/if}}

  {{#if settings.toggle_bottom_cta}}
    <div class="lt-container lt-mb-9 lt-pt-5" id="footer-submit-ticket">
      <div class="lt-container-inner">
        <section class="lt-footer-submit-ticket lt-px-5 lt-py-7">
          <div class="h2 lt-footer-submit-ticket__title">
            {{#if settings.toggle_translations}}
              {{dc settings.bottom_cta_title}}
            {{else}}
              {{settings.bottom_cta_title}}
            {{/if}}
          </div>
          <div class="h3 lt-footer-submit-ticket__subtitle">
            {{#if settings.toggle_translations}}
              {{dc settings.bottom_cta_subtitle}}
            {{else}}
              {{settings.bottom_cta_subtitle}}
            {{/if}}
          </div>
          {{link 'new_request' class='lt-btn lt-btn--primary lt-footer-submit-ticket__btn'}}
        </section>
      </div>
    </div>
  {{/if}}
</div>
